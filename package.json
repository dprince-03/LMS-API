{
  "name": "lms-api",
  "version": "1.0.0",
  "description": "REST API for a Library Management System. My first Backend Engineering Project, building a RESTful API for a library management system that manages books, authors, and users. It also handles borrowing and returning  of books, with additional features like role-based access control, search, and caching.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch --runInBand",
    "test:coverage": "NODE_ENV=test jest --coverage --runInBand",
    "test:verbose": "NODE_ENV=test jest --verbose --runInBand",
    "test:auth": "NODE_ENV=test jest tests/api/auth.test.js --runInBand",
    "test:users": "NODE_ENV=test jest tests/api/users.test.js --runInBand",
    "test:books": "NODE_ENV=test jest tests/api/books.test.js --runInBand",
    "test:authors": "NODE_ENV=test jest tests/api/authors.test.js --runInBand",
    "test:borrow": "NODE_ENV=test jest tests/api/borrowRecords.test.js --runInBand",
    "test:integration": "NODE_ENV=test jest tests/api/integration.test.js --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dprince-03/LMS-API.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dprince-03/LMS-API/issues"
  },
  "homepage": "https://github.com/dprince-03/LMS-API#readme",
  "devDependencies": {
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "mysql2": "^3.15.0",
    "nodemailer": "^7.0.6",
    "validator": "^13.15.15"
  }
}
